{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,  // ‚Üê CHANGED
    "esModuleInterop": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "types": ["node", "react", "react-dom"],
    "incremental": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", ".next"]
}