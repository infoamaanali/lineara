{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true, // Important: disable emit, Rollup will handle output
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "tsBuildInfoFile": ".tsbuildinfo",
    "incremental": true,
    "types": [
      "node",
      "react",
      "react-dom"
    ],
    // "plugins": [
    //   {
    //     "name": "next"
    //   }
    // ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "rootDir": "."
  },
  "include": [
    // "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx", "src/components/Button/rounness.js",
    // ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules", ".next", "dist"
  ]
}
